<!DOCTYPE html>
<html>
<head>
    <title>Inventory Dashboard</title>
    <link rel="stylesheet" href="/style.css">
    <script>
        function enableEdit(rowId) {
            document.getElementById('name-' + rowId).readOnly = false;
            document.getElementById('quantity-' + rowId).readOnly = false;
            document.getElementById('price-' + rowId).readOnly = false;
            document.getElementById('edit-btn-' + rowId).style.display = 'none';
            document.getElementById('save-btn-' + rowId).style.display = 'inline';
        }
    </script>
</head>
<body>
    <!-- NAVIGATION BAR -->
    <nav class="navbar">
        <a href="#home">Home</a>
        <a href="#add">Add Product</a>
        <a href="#low-stock">Low Stock Alerts</a>
    </nav>

    <!-- HOME SECTION -->
    <section id="home">
        <h2>All Products</h2>
        <% if (products.length === 0) { %>
            <p>No products yet. Add your first product.</p>
        <% } else { %>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
                <% products.forEach(product => { %>
                    <tr class="<%= product.quantity < 5 ? 'low-stock' : '' %>">
                        <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                            <td>
                                <input type="text" name="name" value="<%= product.name %>" id="name-<%= product._id %>" readonly>
                            </td>
                            <td>
                                <input type="number" name="quantity" value="<%= product.quantity %>" id="quantity-<%= product._id %>" readonly>
                            </td>
                            <td>
                                <input type="number" step="0.01" name="price" value="<%= product.price %>" id="price-<%= product._id %>" readonly>
                            </td>
                            <td>
                                <button type="button" id="edit-btn-<%= product._id %>" onclick="enableEdit('<%= product._id %>')">Edit</button>
                                <button type="submit" id="save-btn-<%= product._id %>" style="display:none;">Save</button>
                        </form>
                                <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button>Delete</button>
                                </form>
                            </td>
                    </tr>
                <% }) %>
            </table>
        <% } %>
    </section>

    <!-- ADD PRODUCT SECTION -->
    <section id="add">
        <h2>Add Product</h2>
        <form action="/products" method="POST">
            <input type="text" name="name" placeholder="Product Name" required>
            <input type="number" name="quantity" placeholder="Quantity" required>
            <input type="number" step="0.01" name="price" placeholder="Price" required>
            <button>Add Product</button>
        </form>
    </section>

    <!-- LOW STOCK ALERTS -->
    <section id="low-stock">
        <h2>Low Stock Alerts</h2>
        <ul>
            <% products.filter(p => p.quantity < 5).forEach(p => { %>
                <li><%= p.name %> is low on stock (<%= p.quantity %>)</li>
            <% }) %>
        </ul>
    </section>
</body>
</html>
